<Page x:Class="Diplom_Cheremnykh.Pages.PredictionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="PredictionPage">

    <StackPanel Margin="30" Width="300">
        <TextBlock Text="Проверка на мошенничество" FontSize="22" FontWeight="Bold" Margin="0 0 0 20"/>

        <!-- Сумма -->
        <TextBlock Text="Сумма:" Margin="0,10,0,0"/>
        <TextBox x:Name="AmountTextBox" Margin="0 5"/>

        <!-- Геолокация -->
        <TextBlock Text="Геолокация:" Margin="0,10,0,0"/>
        <TextBox x:Name="LocationTextBox" Margin="0 5"/>

        <!-- Время суток -->
        <TextBlock Text="Время суток:" Margin="0,10,0,0"/>
        <TextBox x:Name="TimeOfDayTextBox" Margin="0 5"/>

        <!-- Кнопка предсказания -->
        <Button Content="Предсказать" Click="PredictButton_Click" Margin="0 15 0 5" />

        <!-- Результат -->
        <TextBlock x:Name="PredictionResultTextBlock"
                   FontSize="16"
                   FontWeight="Bold"
                   Foreground="DarkGreen"
                   Margin="0 10"/>

        <!-- Кнопка назад -->
        <Button Content="Назад" Click="BackButton_Click" />
    </StackPanel>
</Page>
