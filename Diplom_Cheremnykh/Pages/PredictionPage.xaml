<Page x:Class="Diplom_Cheremnykh.Pages.PredictionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="White">

    <Grid Margin="40">
        <Border CornerRadius="12" Background="White" Padding="30" BorderBrush="Gray" BorderThickness="1">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Прогнозирование мошенничества"
                           FontSize="24"
                           FontWeight="Bold"
                           Margin="0 0 0 20"
                           HorizontalAlignment="Center"
                           Foreground="DarkBlue" />

                <TextBlock Text="Введите данные для прогноза"
                           FontSize="18"
                           Margin="0 0 20 10"
                           HorizontalAlignment="Center" />

                <!-- Пример ввода данных для прогноза -->
                <TextBox x:Name="TransactionDataTextBox"
                         Margin="0 0 0 15"
                         Padding="10"
                         Background="#3A3F5C"
                         Foreground="White"
                         BorderBrush="#00A8E8"
                         BorderThickness="1"
                         Height="35"/>

                <!-- Кнопка для выполнения предсказания -->
                <Button Content="Выполнить прогноз"
                        Click="Predict_Click"
                        Background="MediumBlue"
                        Foreground="White"
                        Margin="0 0 0 15"
                        Height="35"/>

                <!-- Отображение результатов прогноза -->
                <TextBlock x:Name="PredictionResultTextBlock"
                           FontSize="18"
                           Margin="0 0 0 15"
                           HorizontalAlignment="Center" />

                <!-- Кнопка для возврата на предыдущую страницу -->
                <Button Content="Назад"
                        Click="Back_Click"
                        Foreground="Gray"
                        HorizontalAlignment="Center"
                        Height="35"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
