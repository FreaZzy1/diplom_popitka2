<Page x:Class="Diplom_Cheremnykh.Pages.ForgotPasswordPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ForgotPasswordPage">

    <!-- Фоновый цвет приложения -->
    <Grid Background="{StaticResource PrimaryBackground}">

        <!-- Карточка в центре -->
        <Border Width="340"
                Padding="30"
                Background="{StaticResource SecondaryBackground}"
                CornerRadius="12"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <!-- Основная вертикальная раскладка -->
            <StackPanel>

                <!-- Заголовок -->
                <TextBlock Text="Сброс пароля"
                           Foreground="{StaticResource AccentBlue}"
                           FontSize="20"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- E‑mail -->
                <TextBlock Text="E‑mail" Foreground="White"/>
                <TextBox x:Name="EmailTextBox" Height="32" Margin="0,0,0,12"/>

                <!-- Код -->
                <TextBlock Text="Код из письма" Foreground="White"/>
                <TextBox x:Name="CodeTextBox" Height="32" Margin="0,0,0,12"/>

                <!-- Новый пароль -->
                <TextBlock Text="Новый пароль" Foreground="White"/>
                <PasswordBox x:Name="NewPasswordBox" Height="32" Margin="0,0,0,12"/>

                <!-- Повтор пароля -->
                <TextBlock Text="Повторите пароль" Foreground="White"/>
                <PasswordBox x:Name="ConfirmBox" Height="32" Margin="0,0,0,20"/>

                <!-- Сообщение -->
                <TextBlock x:Name="Msg"
                           Foreground="Red"
                           TextWrapping="Wrap"
                           Margin="0,0,0,16"/>

                <!-- Кнопки -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Сбросить пароль"
                            Width="140"
                            Style="{StaticResource AccentButtonStyle}"
                            Click="Reset_Click" Height="27"/>
                    <Button Content="Назад"
                            Width="80"
                            Margin="12,0,0,0"
                            Style="{StaticResource AccentButtonStyle}"
                            Click="Back_Click"/>
                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>
</Page>
