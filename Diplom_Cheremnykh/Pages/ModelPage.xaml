<Page x:Class="Diplom_Cheremnykh.Pages.ModelPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ModelPage"
      Background="{StaticResource PrimaryBackground}"
      >

    <Border Padding="30" Background="{StaticResource SecondaryBackground}" CornerRadius="20"
            VerticalAlignment="Center" HorizontalAlignment="Center">
        <Grid Width="500" Height="500">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <TextBlock Text="Добро пожаловать в систему"
                       Foreground="{StaticResource AccentBlue}"
                       FontSize="24"
                       FontWeight="Bold"
                       HorizontalAlignment="Center" Grid.Row="0" Margin="0,0,0,20"/>

            <!-- Информация о пользователе -->
            <StackPanel Grid.Row="1" Margin="0,10,0,20">
                <Label x:Name="UsernameTextBlock"
                   FontSize="16"
                   VerticalAlignment="Top"
                   Content="Имя пользователя: ..." />

                <Label x:Name="RoleTextBlock"
                   FontSize="16"
                   VerticalAlignment="Top"
                   Margin="0,30,0,0"
                   Content="Роль: ..." />
            </StackPanel>

            <!-- Кнопка управления случаями мошенничества -->
            <Button Grid.Row="2"
                    Content="Управление случаями мошенничества"
                    Height="40"
                    FontSize="16"
                    Style="{StaticResource AccentButtonStyle}"
                    Click="ManageFraudCasesButton_Click"
                    Margin="0,0,0,20"/>

            <!-- Кнопка для перехода к профилю -->
            <Button Grid.Row="3"
                    Content="Редактировать профиль"
                    Height="40"
                    FontSize="16"
                    Style="{StaticResource AccentButtonStyle}"
                    Click="EditProfileButton_Click"
                    Margin="0,0,0,20"/>

            <!-- Кнопка выхода из системы -->
            <Button Grid.Row="4"
                    Content="Выйти"
                    Height="40"
                    FontSize="16"
                    Style="{StaticResource AccentButtonStyle}"
                    Click="LogoutButton_Click"
                    Margin="0,0,0,20"/>

            <!-- Дополнительная информация -->
            <TextBlock Grid.Row="5"
                       Text="Здесь вы можете управлять всеми аспектами системы."
                       Foreground="Gray"
                       FontSize="14"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,20"/>

        </Grid>
    </Border>
</Page>
