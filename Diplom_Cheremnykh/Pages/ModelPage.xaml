<Page x:Class="Diplom_Cheremnykh.Pages.ModelPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ModelPage"
      Background="{StaticResource PrimaryBackground}">

    <Border Padding="30"
            Background="{StaticResource SecondaryBackground}"
            CornerRadius="20"
            VerticalAlignment="Center"
            HorizontalAlignment="Center">
        <Grid Width="500">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- 0 Заголовок -->
                <RowDefinition Height="Auto"/>
                <!-- 1 Инфо о пользователе -->
                <RowDefinition Height="Auto"/>
                <!-- 2 Управление мошенничеством -->
                <RowDefinition Height="Auto"/>
                <!-- 3 Редактировать профиль -->
                <RowDefinition Height="Auto"/>
                <!-- 4 Проверить на мошенничество -->
                <RowDefinition Height="Auto"/>
                <!-- 5 Выйти -->
                <RowDefinition Height="Auto"/>
                <!-- 6 Доп. информация -->
            </Grid.RowDefinitions>

            <!-- 0 Заголовок -->
            <TextBlock Grid.Row="0"
                       Text="Добро пожаловать в систему"
                       Foreground="{StaticResource AccentBlue}"
                       FontSize="24"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- 1 Информация о пользователе -->
            <StackPanel Grid.Row="1" Margin="0,0,0,20">
                <TextBlock x:Name="UsernameTextBlock"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="0,0,0,5"/>
                <TextBlock x:Name="RoleTextBlock"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="White"/>
            </StackPanel>

            <!-- 2 Управление случаями мошенничества -->
            <Button Grid.Row="2"
                    Content="Управление случаями мошенничества"
                    Height="40"
                    FontSize="16"
                    Style="{StaticResource AccentButtonStyle}"
                    Click="ManageFraudCasesButton_Click"
                    Margin="0,0,0,10"/>

            <!-- 3 Редактировать профиль -->
            <Button Grid.Row="3"
                    Content="Редактировать профиль"
                    Height="40"
                    FontSize="16"
                    Style="{StaticResource AccentButtonStyle}"
                    Click="EditProfileButton_Click"
                    Margin="0,0,0,10"/>

            <!-- 4 Проверить на мошенничество -->
            <Button Grid.Row="4"
                    Content="Проверить на мошенничество"
                    Height="40"
                    FontSize="16"
                    Style="{StaticResource AccentButtonStyle}"
                    Click="CheckFraudButton_Click"
                    Margin="0,0,0,10"/>

            <!-- 5 Выйти -->
            <Button Grid.Row="5"
                    Content="Выйти"
                    Height="40"
                    FontSize="16"
                    Style="{StaticResource AccentButtonStyle}"
                    Click="LogoutButton_Click"
                    Margin="0,0,0,20"/>

            <!-- 6 Дополнительная информация -->
            <TextBlock Grid.Row="6"
                       Text="Здесь вы можете управлять всеми аспектами системы."
                       Foreground="Gray"
                       FontSize="14"
                       HorizontalAlignment="Center"/>
        </Grid>
    </Border>
</Page>
